<?xml version="1.0"?>
<openerp>
<data>
    <template id="assets_backend" name="tucarro_micarro_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link href="http://code.google.com/apis/maps/documentation/javascript/examples/default.css" rel="stylesheet" type="text/css" />
                <script type="text/javascript" src="/mi_carro_tu_carro_idu/static/src/js/maps.js"></script>
            </xpath>
    </template>
    <menuitem id="mi_carro_tu_carro_nav" name="Mi Carro Tu Carro IDU"/>
    <menuitem id="mi_carro_tu_carro_menu" name="Compartir Transporte"
        parent="mi_carro_tu_carro_nav"
    />
    <!--
    =================================================================
    mi_carro_tu_carro.oferta
    =================================================================
    -->
    <record model="ir.ui.view" id="mi_oferta_form">
        <field name="model">mi_carro_tu_carro.oferta</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <group colspan="2" col="2">
                        <group name="Datos Oferta" colspan="1">
                            <separator string="Mapa" colspan="2"/>
                            <body onload="load()">
                                <div class="container">
                                    <div class="span5" id="map" style="width: 100%; height: 400px"></div>
                                </div>
                            </body>
                        </group>
                        <group name="Datos Oferta" colspan="1">
                            <separator string="Comparte Tu Viaje" colspan="2"/>
                            <field name="user_id"
                                domain="[('id','=',uid)]"
                                readonly="1"
                            />
                            <field name="descripcion"/>
                            <field name="origen"/>
                            <field name="destino"/>
                            <field name="hora_viaje"/>
                            <field name="tipo_transporte"/>
                            <field name="vacantes"/>
                            <field name="costo"/>
                            <field name="comentario"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="mi_oferta_tree">
        <field name="model">mi_carro_tu_carro.oferta</field>
        <field name="arch" type="xml">
            <tree>
                <field name="state" string="Estado"/>
                <field name="origen"/>
                <field name="destino"/>
                <field name="hora_viaje"/>
                <field name="tipo_transporte"/>
                <field name="vacantes"/>
                <field name="costo"/>
                <field name="comentario"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="mi_oferta_action">
        <field name="name">Mi Carro Tu Carro</field>
        <field name="res_model">mi_carro_tu_carro.oferta</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="mi_oferta_tree"/>
        <field name="context">{'form_view_ref': 'mi_carro_tu_carro_idu.mi_oferta_form'}</field>
        <field name="domain">[('user_id','=',uid)]</field>
    </record>
    <menuitem id="mi_oferta_menu" parent="mi_carro_tu_carro_menu" name="Mi Ruta" action="mi_oferta_action"/>

    <!--
    =================================================================
    mi_carro_tu_carro.oferta  Todas Ofertas Y sin poder modificar
    =================================================================
    -->
    <record model="ir.ui.view" id="ofertas_form">
        <field name="model">mi_carro_tu_carro.oferta</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <group colspan="2" col="2">
                        <group name="Datos Oferta" colspan="1">
                            <separator string="Mapa" colspan="2"/>
                        </group>
                        <group name="Datos Oferta" colspan="1">
                            <separator string="Comparte Tu Viaje" colspan="2"/>
                            <field name="user_id"
                                domain="[('id','=',uid)]"
                                readonly="1"
                            />
                            <field name="descripcion"/>
                            <field name="origen"/>
                            <field name="destino"/>
                            <field name="hora_viaje"/>
                            <field name="tipo_transporte"/>
                            <field name="vacantes"/>
                            <field name="costo"/>
                            <field name="comentario"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofertas_tree">
        <field name="model">mi_carro_tu_carro.oferta</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="user_id"/>
                <field name="origen"/>
                <field name="destino"/>
                <field name="hora_viaje"/>
                <field name="tipo_transporte"/>
                <field name="vacantes"/>
                <field name="costo"/>
                <field name="comentario"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofertas_action">
        <field name="name">Ofertas de Viaje</field>
        <field name="res_model">mi_carro_tu_carro.oferta</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="ofertas_tree"/>
        <field name="context">{'form_view_ref':'mi_carro_tu_carro_idu.ofertas_form'}</field>
        <field name="domain">[('state','=','activo')]</field>
    </record>
    <menuitem id="ofertas_menu" parent="mi_carro_tu_carro_menu" name="Ofertas de Viaje" action="ofertas_action"/>

</data>
</openerp>