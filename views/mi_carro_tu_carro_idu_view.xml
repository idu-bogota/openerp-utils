<?xml version="1.0"?>
<openerp>
<data>
    <menuitem id="mi_carro_tu_carro_nav" name="Mi Carro Tu Carro IDU"/>
    <menuitem id="mi_carro_tu_carro_menu" name="Compartir Transporte"
        parent="mi_carro_tu_carro_nav"
    />
    <!--
    =================================================================
    Vista geogrÃ¡fica de la ruta
    =================================================================
    -->

    <!-- GeoEngine views -->
    <record id="ir_ui_view_geo_ruta" model="ir.ui.view">
        <field name="name">Geo Ruta</field>
        <field name="model">mi_carro_tu_carro.oferta</field>
        <field eval="16" name="priority" />
        <field name="default_extent">-8258256.53593,499200.178597,-8236867.077879,522048.507704</field>
        <field name="arch" type="xml">
            <geoengine version="7.0">
                <field name="descripcion" />
                <field name="state" />
            </geoengine>
        </field>
    </record>

    <record id="geoengine_vector_layer_geo_ruta" model="geoengine.vector.layer">
        <field name="geo_field_id"
            ref="mi_carro_tu_carro_idu.field_mi_carro_tu_carro_oferta_shape"/>
        <field name="name">Geo - Ruta</field>
        <field eval="6" name="sequence"/>
        <field name="view_id" ref="ir_ui_view_geo_ruta"/>
        <field name="geo_repr">basic</field>
        <field eval="1" name="nb_class"/>
        <field name="begin_color">#FF680A</field>
    </record>

    <record id="geoengine_raster_layer_geo_ruta"
        model="geoengine.raster.layer">
        <field name="raster_type">osm</field>
        <field name="name">Ruta Background</field>
        <field name="view_id" ref="ir_ui_view_geo_ruta" />
        <field eval="0" name="overlay" />
    </record>

    <!--
    =================================================================
    mi_carro_tu_carro.oferta
    =================================================================
    -->
    <record model="ir.ui.view" id="mi_oferta_form">
        <field name="model">mi_carro_tu_carro.oferta</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <group colspan="2" col="2">
                        <group name="Datos Oferta" colspan="1">
                            <separator string="Comparte Tu Viaje" colspan="2"/>
                            <field name="user_id"
                                domain="[('id','=',uid)]"
                                readonly="1"
                            />
                            <field name="descripcion"/>
                            <field name="hora_viaje"/>
                            <field name="tipo_transporte"/>
                            <field name="vacantes" attrs="{'invisible':[('tipo_transporte','=','bici')]}"/>
                            <field name="integrantes" attrs="{'invisible':[('tipo_transporte','!=','bici')]}"/>
                            <field name="comentario"/>
                            <field name="shape" widget="geo_edit_map" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="mi_oferta_tree">
        <field name="model">mi_carro_tu_carro.oferta</field>
        <field name="arch" type="xml">
            <tree>
                <field name="state" string="Estado"/>
                <field name="hora_viaje"/>
                <field name="tipo_transporte"/>
                <field name="comentario"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="mi_oferta_action">
        <field name="name">Mi Carro Tu Carro</field>
        <field name="res_model">mi_carro_tu_carro.oferta</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="mi_oferta_tree"/>
        <field name="context">{'form_view_ref': 'mi_carro_tu_carro_idu.mi_oferta_form'}</field>
        <field name="domain">[('user_id','=',uid)]</field>
    </record>
    <menuitem id="mi_oferta_menu" parent="mi_carro_tu_carro_menu" name="Mi Ruta" action="mi_oferta_action"/>

    <!--
    =================================================================
    mi_carro_tu_carro.oferta  Todas Ofertas Y sin poder modificar
    =================================================================
    -->
    <record model="ir.ui.view" id="ofertas_form">
        <field name="model">mi_carro_tu_carro.oferta</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <header>
                    <button name="compute_vacantes" string="Solicitar" type="object" attrs="{'invisible':[('tipo_transporte','=','bici')]}"/>
                    <button name="compute_integrantes" string="Solicitar" type="object" attrs="{'invisible':[('tipo_transporte','!=','bici')]}"/>
                </header>
                <sheet>
                    <group colspan="2" col="2">
                        <group name="Datos Oferta" colspan="1">
                            <separator string="Comparte Tu Viaje" colspan="2"/>
                            <field name="user_id"
                                domain="[('id','=',uid)]"
                                readonly="1"
                            />
                            <field name="descripcion"/>
                            <field name="hora_viaje"/>
                            <field name="tipo_transporte"/>
                            <field name="vacantes" attrs="{'invisible':[('tipo_transporte','=','bici')]}"/>
                            <field name="integrantes" attrs="{'invisible':[('tipo_transporte','!=','bici')]}"/>
                            <field name="comentario"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofertas_tree">
        <field name="model">mi_carro_tu_carro.oferta</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="user_id"/>
                <field name="hora_viaje"/>
                <field name="tipo_transporte"/>
                <field name="comentario"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofertas_action">
        <field name="name">Ofertas de Viaje</field>
        <field name="res_model">mi_carro_tu_carro.oferta</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="ofertas_tree"/>
        <field name="context">{'form_view_ref':'mi_carro_tu_carro_idu.ofertas_form'}</field>
        <field name="domain">[('state','=','activo')]</field>
    </record>
    <menuitem id="ofertas_menu" parent="mi_carro_tu_carro_menu" name="Ofertas de Viaje" action="ofertas_action"/>

</data>
</openerp>